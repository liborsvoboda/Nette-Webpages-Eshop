<!DOCTYPE html>
<html lang="{$locale}">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <!-- <meta name="viewport" content="width=device-width, initial-scale=1"> -->
    <meta name="channel" content="shop">

    <title>{ifset title}{include title|stripHtml} | {/ifset}Mibron.store</title>
    {* Google Fonts *}


    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,400i,700" rel="stylesheet">
    {* Font Awesome *}


    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.9.0/css/all.css"
          integrity="sha384-i1LQnF23gykqWXg6jxC2ZbCbUMxyw5gLZY6UiUS98LYV5unm8GWmfkIS6jqJfb4E" crossorigin="anonymous">
    {* Bootstrap 4 *}


    <link rel="stylesheet" href="{$basePath}/bower_components/bootstrap/dist/css/bootstrap.min.css">

    {* DataGrid *}
    <link rel="stylesheet" type="text/css" href="{$basePath}/bower_components/happy/dist/happy.css">
    <link rel="stylesheet" type="text/css"
          href="{$basePath}/bower_components/bootstrap-datepicker/dist/css/bootstrap-datepicker3.css">
    <link rel="stylesheet" type="text/css" href="{$basePath}/bower_components/ublaboo-datagrid/assets/datagrid.css">
    <link rel="stylesheet" type="text/css"
          href="{$basePath}/bower_components/ublaboo-datagrid/assets/datagrid-spinners.css">
    <link rel="stylesheet" href="{$basePath}/bower_components/select2/dist/css/select2.min.css">
    <link rel="stylesheet" href="{$basePath}/assets/admin/js/summernote/summernote-bs4.css">
    <link rel="stylesheet" href="{$baseUrl}/assets/admin/css/style.css">


    <script src="{$basePath}/bower_components/jquery/dist/jquery.min.js"></script>
</head>
<body>
<div class="container-fluid pl-5">
    <div class="row my-3">
        <div class="col">
            <a href="/">
                <img src="{$basePath}/assets/front/mobir/images/logo-big-238x100.png" alt="app"
                     style="height: 3.5rem;">
            </a>
        </div>
        <nav class="navbar navbar-expand-lg pt-4">
            <div class="container">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#account-menu"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="account-menu">
                    <ul class="navbar-nav ml-auto">
                        <li class="mr-2">
                            <a n:href=":Front:Account:default" title="Účet" class="btn btn-primary">
                                <i class="fas fa-user"></i>
                                <span class="ml-2">{$user->getIdentity()->firstName} {$user->getIdentity()->lastName}</span>
                            </a>
                        </li>
                        <li class="link1">
                            <a n:href=":Front:Sign:out" title="Odhlásiť" class="btn btn-primary">
                                <i class="fas fa-sign-out-alt"></i>
                                <span class="d-none d-lg-block d-xl-none">Odhlásiť</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </div>
    {if $flashes}
        <div class="row my-3">
            {foreach $flashes as $flash}
                <div class="col-12">
                    <div class="alert alert-{$flash->type} alert-dismissible fade show" role="alert">
                        {$flash->message}
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                </div>
            {/foreach}
        </div>
    {/if}
    <div class="row" id="app">
        <div class="col-md-3 col-lg-2">
            {include 'sideMenu.latte' sideMenu => $sideMenu}
        </div>
        <div class="content col-md-9 col-lg-10">
            {ifset headerActions}
                <div class="card mb-3">
                    <div class="card-body header-actions">
                        {include headerActions}
                    </div>
                </div>
            {/ifset}
            {include content}
        </div>
    </div>
</div>
<script src="{$basePath}/bower_components/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="{$basePath}/bower_components/nette-forms/src/assets/netteForms.js"></script>
<script src="{$basePath}/bower_components/nette.ajax.js/nette.ajax.js"></script>
<script src="{$basePath}/bower_components/happy/dist/happy.js"></script>
<script src="{$basePath}/bower_components/bootstrap-datepicker/dist/js/bootstrap-datepicker.js"></script>
<script src="{$basePath}/bower_components/jquery-ui-sortable/jquery-ui-sortable.js"></script>
<script src="{$basePath}/bower_components/ublaboo-datagrid/assets/datagrid.js"></script>
<script src="{$basePath}/bower_components/ublaboo-datagrid/assets/datagrid-instant-url-refresh.js"></script>
<script src="{$basePath}/bower_components/ublaboo-datagrid/assets/datagrid-spinners.js"></script>
<script src="{$basePath}/assets/admin/js/summernote/summernote-bs4.min.js"></script>
<script src="{$basePath}/assets/admin/js/summernote/lang/summernote-sk-SK.min.js"></script>
<script src="{$basePath}/bower_components/select2/dist/js/select2.full.min.js"></script>
<script>
    $.nette.init();
</script>
<script>
    $(document).ready(function () {
        $('.editor').summernote({
            height: 400,
            lang: "sk-SK"
        });
    });
</script>
<script>
    $('.select2').select2();
    $('.datepicker2').datepicker({
        format: 'dd.mm.yyyy',
        autoclose: true,
        todayHighlight: true
    });
    $('.change-submit').on('change', function (){
        $('.change-submit').closest('form').submit();
    });
</script>
</body>
</html>
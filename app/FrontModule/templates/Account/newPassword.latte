{block content}
    <div class="container mt-4">
        <div class="row">
            <div class="col-6 offset-3 pt-4">
                {if $flashes}
                    {foreach $flashes as $flash}
                        <div class="alert alert-{$flash->type}">{$flash->message}</div>
                    {/foreach}
                {/if}
                {control newPasswordForm}
            </div>
        </div>
    </div>
{/block}
{block content}
    {capture $title}{_strings.blog}{/capture}
    <section class="container pb-5">
        <div class="row justify-content-center">
            <div class="col-lg-10 col-xl-9">
                {include '../others/breadcrumbs.latte', breads => ['blog' => $title, $blog->slug => $blog->title], align => left}

                <h1 class="mb-3">{$blog->title}</h1>
                <time class=" font-weight-bold text-secondary">
                    <img src="{$basePath}{$tplSetting->getSvg('calendar_blog')}" alt="{$blog->timestamp->format('d. m. Y')}" class="align-text-top mr-1" style="width: 20px">
                    {$blog->timestamp->format('d. m. Y')}
                </time>

                <article class="content content--post my-5">
                    {$blog->text|noescape}
                </article>
            </div>
        </div>
    </section>
{/block}
{block title}
    {$blog->title}
{/block}


                            {$tplSetting->getSetting('companyContactPhone')}<br>
                            {$tplSetting->getSetting('companyContactPesron')}
                        </address>
                    </div>
                    <div class="col-lg-4 position-relative my-2 my-lg-0">
                        <img src="{$basePath}{$tplSetting->getImg('nela_1.jpg')}" class="img-fluid img-cover rounded h-100">
                    </div>
                    
                    <div class="col-lg-4">
                        <iframe class="d-block rounded h-100" width="100%" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="https://www.openstreetmap.org/export/embed.html?bbox=18.160829544067386%2C48.0044168485942%2C18.167910575866703%2C48.00769726298698&amp;layer=mapnik&amp;marker=48.00605708187012%2C18.16437005996704"></iframe>
                    </div>
                </div>

                {*<div class="row justify-content-center">
                    <div class="col-md-10 col-lg-9 col-xl-7 mb-5">
                        <h2 class="mb-4">{_strings.contact_us}</h2>
                        {control contactForm}
                    </div>
                </div>*}

{block content}
    <section class="content7 cid-skDL11tZun" id="content7-15">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-xl-10 col-lg-11">
                    <div class="text-left text-lg-center">
                        <h2 class="mbr-section-title mbr-bold mbr-fonts-style display-5">{_strings.faq.title|noescape}</h2>
                    </div>
                    <div class="row justify-content-center">
                        {foreach $faqs as $faq}

									<hr class="mb-0">
								</div>
                            </div>
                        {/foreach}
                    </div>
                </div>
            </div>

			<hr class="my-5">

			<div class="text-center mb-5">
				<h2 class="mb-4">{_strings.faq.help_title}</h2>
				<p>
					{_strings.faq.help_text1}<br>
					{_strings.faq.help_text2}

        {$userData->firstName} {$userData->lastName}, {$userData->city}
    </div>
    <div class="card-body">
        <ul class="nav nav-pills flex-column">
            <li class="nav-item">
                <a class="nav-link {if $presenter->isLinkCurrent('Office:profile')}active{/if}" n:href="Office:profile, 'uid'=>$uid">Profil</a>
            </li>
          {if $userData->user_level_id > 2}
            <li class="nav-item">
              <a class="nav-link {if $presenter->isLinkCurrent('Office:default')}active{/if}" n:href="Office:default, uid=>$uid">Prehľad</a>
            </li>
          {/if}
            <li class="nav-item">
                <a class="nav-link {if $presenter->isLinkCurrent('Office:unpaidOrders')}active{/if}" n:href="Office:unpaidOrders, 'uid'=>$uid">Neuhradené objednávky</a>
            </li>
            <li class="nav-item">
                <a class="nav-link {if $presenter->isLinkCurrent('Office:orders')}active{/if}" n:href="Office:orders, 'uid'=>$uid">Uhradené objednávky</a>
            </li>
          {if $userData->user_level_id > 2}
                <li class="nav-item">
                    <a class="nav-link {if $presenter->isLinkCurrent('Office:partners')}active{/if}" n:href="Office:partners, 'uid'=>$uid">Priami partneri</a>

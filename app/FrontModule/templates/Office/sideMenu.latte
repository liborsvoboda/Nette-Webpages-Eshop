                <li class="nav-item">
                    <a class="nav-link {if $presenter->isLinkCurrent('Office:stats')}active{/if}" n:href="Office:stats, 'uid'=>$uid">Štatistiky</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link {if $presenter->isLinkCurrent('Office:commissions')}active{/if}" n:href="Office:commissions, 'uid'=>$uid">Provízie</a>
                </li>
            
                <li class="nav-item">
                    <a class="nav-link {if $presenter->isLinkCurrent('Account:marketingGallery')}active{/if}" n:href="Account:marketingGallery, 'uid'=>$uid">Marketingová galéria</a>
                </li>
            {/if}
        </ul>
    </div>
</div>

{if $userData->user_level_id > 2}
  <div class="card mt-4" style="border: 1px #dee2e6 solid;">
      <div class="card-body">
          <a n:href="Office:default, 'uid' => null">
              {$user->getIdentity()->data['firstName']} {$user->getIdentity()->data['lastName']}
          </a>
      </div>
  </div>
{/if}